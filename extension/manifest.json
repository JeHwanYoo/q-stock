{
  "name": "Q-Stock",
  "description": "Chrome extension program to check market price.",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Q-Stock",
    "default_popup": "./popup/index.html",
    "default_icon": {
      "16": "./icons/16x16.png",
      "32": "./icons/32x32.png",
      "48": "./icons/48x48.png",
      "128": "./icons/128x128.png"
    }
  },
  "permissions": ["webRequest"],
  "host_permissions": ["http://asp1.krx.co.kr/"],
  "icons": {
    "16": "./icons/16x16.png",
    "32": "./icons/32x32.png",
    "48": "./icons/48x48.png",
    "128": "./icons/128x128.png"
  }
}
